---
// src/layouts/Layout.astro
import { Menu, X, Search } from 'lucide-react';

// Props: Title is required, Description is optional
const { title, description } = Astro.props;

const WA_LINK = "https://wa.me/60166062534";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description || "Ocha Healthcare - AI-Powered Medical Concierge. Expert care in Malaysia, sorted in seconds."} />
		<meta name="viewport" content="width=device-width" />
		
		{/* ðŸš€ UPDATED: New Favicon (PNG) */}
		<link rel="icon" type="image/png" href="/favicon.png" />
		
		<meta name="generator" content={Astro.generator} />
		
		{/* Google Fonts */}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	
	<body class="bg-slate-50 font-sans text-slate-900 antialiased selection:bg-indigo-100 selection:text-indigo-900 flex flex-col min-h-screen">
		
		{/* === NAVBAR (Glassmorphism) === */}
		<nav class="fixed w-full z-50 bg-white/95 backdrop-blur-md border-b border-slate-200 transition-all duration-300 shadow-sm">
			<div class="max-w-7xl mx-auto px-6 h-20 flex justify-between items-center relative">
				
				{/* 1. LOGO & LINKS (Left) */}
				<div class="flex items-center gap-8">
					<a href="/" class="flex-shrink-0 opacity-100 hover:opacity-80 transition-opacity z-50">
						{/* ðŸš€ UPDATED: New JPG Logo with blending */}
						<img src="/assets/logo.jpg" alt="Ocha Healthcare" class="h-12 w-auto object-contain mix-blend-multiply" />
					</a>

                    {/* Desktop Navigation */}
                    <div class="hidden md:flex items-center gap-6">
						<a href="/" class="text-sm font-bold text-slate-500 hover:text-indigo-600 transition-colors">Home</a>
						<a href="/doctors" class="text-sm font-bold text-slate-500 hover:text-indigo-600 transition-colors">Doctors</a>
						<a href="/blog" class="text-sm font-bold text-slate-500 hover:text-indigo-600 transition-colors flex items-center gap-1">
							Guides <span class="bg-blue-50 text-[#276CA1] text-[10px] px-1.5 py-0.5 rounded-full border border-blue-100">New</span>
						</a>
					</div>
				</div>

				{/* 2. ACTION BUTTONS (Right - Desktop Only) */}
				<div class="hidden md:flex items-center gap-3">
					
					{/* Secondary Button: Find Specialist */}
					<a href="/doctors" class="flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-bold text-slate-700 bg-white border border-slate-200 hover:bg-slate-50 hover:border-indigo-200 transition-all group">
						<Search className="w-4 h-4 text-slate-400 group-hover:text-indigo-500 transition-colors" />
						Find Specialist
					</a>

					{/* Primary Button: Book Consultation */}
					<a href={WA_LINK} target="_blank" class="bg-indigo-600 text-white px-6 py-2.5 rounded-full text-sm font-bold hover:bg-indigo-700 transition shadow-lg shadow-indigo-600/20 active:scale-95 transform duration-150 flex items-center gap-2">
						Book Consultation
					</a>
				</div>

				{/* 3. MOBILE MENU TOGGLE BUTTON */}
				<button id="menu-btn" class="md:hidden text-slate-600 p-2 z-50 focus:outline-none hover:bg-slate-100 rounded-full transition-colors">
					<div class="icon-menu block">
						<Menu className="w-6 h-6" />
					</div>
					<div class="icon-close hidden">
						<X className="w-6 h-6" />
					</div>
				</button>
			</div>
		</nav>

		{/* === MOBILE MENU OVERLAY === */}
		<div id="mobile-menu" class="fixed inset-0 z-40 bg-white transform translate-x-full transition-transform duration-300 md:hidden flex flex-col pt-28 px-6 gap-6">
			<a href="/" class="text-xl font-medium text-slate-900 border-b border-slate-100 pb-4">
				Concierge Home
			</a>
			
            {/* Mobile Link */}
            <a href="/blog" class="text-xl font-medium text-slate-900 border-b border-slate-100 pb-4 flex items-center justify-between group">
				Health Guides 
				<span class="bg-blue-50 text-[#276CA1] text-xs font-bold px-2 py-1 rounded-full border border-blue-100">New</span>
			</a>

			<a href="/doctors" class="text-xl font-medium text-slate-900 border-b border-slate-100 pb-4 flex items-center justify-between group">
				Find Specialist <Search className="w-5 h-5 text-slate-400 group-hover:text-indigo-500 transition-colors" />
			</a>
			
			<a href={WA_LINK} target="_blank" class="bg-indigo-600 text-white text-center py-4 rounded-xl font-bold text-lg mt-4 shadow-xl shadow-indigo-200 active:scale-95 transition-transform">
				Book Consultation
			</a>
		</div>

		{/* === MAIN CONTENT === */}
		<div class="flex-grow pt-20">
			<slot />
		</div>

		{/* === FOOTER === */}
		<footer class="bg-white border-t border-slate-200 py-12 mt-auto">
			<div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6">
				<div class="opacity-80 grayscale hover:grayscale-0 transition-all duration-500">
					{/* ðŸš€ UPDATED: Footer Logo (JPG) */}
					<img src="/assets/logo.jpg" alt="Ocha Healthcare" class="h-10 w-auto object-contain mix-blend-multiply" />
				</div>
				<div class="text-slate-400 text-sm text-center md:text-right font-medium">
					Â© 2026 Ocha Healthcare. All rights reserved.
				</div>
			</div>
		</footer>

		{/* === MOBILE MENU SCRIPT === */}
		<script>
			const menuBtn = document.getElementById('menu-btn');
			const mobileMenu = document.getElementById('mobile-menu');
			const iconMenu = document.querySelector('.icon-menu');
			const iconClose = document.querySelector('.icon-close');
			let isMenuOpen = false;

			if (menuBtn && mobileMenu && iconMenu && iconClose) {
				menuBtn.addEventListener('click', () => {
					isMenuOpen = !isMenuOpen;
					if (isMenuOpen) {
						mobileMenu.classList.remove('translate-x-full');
						mobileMenu.classList.add('translate-x-0');
						document.body.classList.add('overflow-hidden');
						iconMenu.classList.remove('block');
						iconMenu.classList.add('hidden');
						iconClose.classList.remove('hidden');
						iconClose.classList.add('block');
					} else {
						mobileMenu.classList.remove('translate-x-0');
						mobileMenu.classList.add('translate-x-full');
						document.body.classList.remove('overflow-hidden');
						iconMenu.classList.remove('hidden');
						iconMenu.classList.add('block');
						iconClose.classList.remove('block');
						iconClose.classList.add('hidden');
					}
				});
				const links = mobileMenu.querySelectorAll('a');
				links.forEach(link => {
					link.addEventListener('click', () => {
						isMenuOpen = false;
						mobileMenu.classList.add('translate-x-full');
						document.body.classList.remove('overflow-hidden');
						iconMenu.classList.add('block');
						iconMenu.classList.remove('hidden');
						iconClose.classList.add('hidden');
					});
				});
			}
		</script>
	</body>
</html>

<style is:global>
	:root { 
		--font-sans: 'Plus Jakarta Sans', sans-serif; 
		--font-serif: 'Lora', serif; 
	}
	body { font-family: var(--font-sans); }
	h1, h2, h3, h4, h5, h6 { font-family: var(--font-serif); }
</style>