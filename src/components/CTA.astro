---
// src/components/CTA.astro
import { ArrowRight, CalendarCheck } from 'lucide-react';
---

<section class="py-20 px-6 bg-slate-50">
  <div class="max-w-5xl mx-auto bg-indigo-900 rounded-[2.5rem] p-12 md:p-20 text-center relative overflow-hidden shadow-2xl">
      
      {/* Background Blobs */}
      <div class="absolute top-0 right-0 w-96 h-96 bg-indigo-600 opacity-20 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-indigo-400 opacity-10 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
      
      <div class="relative z-10">
          <h2 class="font-serif text-4xl md:text-5xl text-white mb-6">Ready to plan your medical trip?</h2>
          <p class="text-indigo-100 text-lg mb-10 max-w-2xl mx-auto">
            Get a free treatment plan, cost estimate, and doctor availability check within 24 hours.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
              
              {/* Button 1: Directory */}
              <a href="/doctors" class="bg-white text-indigo-900 px-8 py-4 rounded-xl font-bold text-lg hover:bg-indigo-50 transition shadow-lg flex items-center justify-center gap-2 group">
                  Choose your doctor 
                  <ArrowRight className="w-5 h-5 group-hover:translate-x-1 transition-transform" />
              </a>
              
              {/* Button 2: WhatsApp (Booking) */}
              <a href="https://wa.me/60166062534" class="bg-transparent border border-indigo-500/50 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white/5 transition flex items-center justify-center gap-2 hover:border-white/30">
                  <CalendarCheck className="w-5 h-5" />
                  Book appointment
              </a>

          </div>
      </div>
  </div>
</section>