---
// src/components/Hero.astro
import { ArrowRight, MessageCircle, CheckCircle2, FileCheck, Car, ShieldCheck } from 'lucide-react';
---

{/* ðŸš€ UPDATE: Aggressive reduction to pt-20 (Mobile) and lg:pt-24 (Desktop) */}
<section class="relative pt-20 pb-20 lg:pt-24 lg:pb-32 overflow-hidden bg-slate-50">
  
  {/* Background Decoration */}
  <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 pointer-events-none z-0 mix-blend-soft-light"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-indigo-100/40 rounded-full blur-3xl mix-blend-multiply animate-pulse"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-100/40 rounded-full blur-3xl mix-blend-multiply"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-12 lg:gap-20 items-center relative z-10">
    
    {/* LEFT: Narrative & Text */}
    <div class="text-center lg:text-left">
      
      {/* BADGE */}
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/80 backdrop-blur-sm border border-indigo-100 shadow-sm mb-8 transition-transform hover:scale-105 cursor-default group">
        <span class="text-xs font-bold tracking-wider uppercase bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">
          AI-Powered Medical Concierge
        </span>
      </div>

      {/* Headline */}
      <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl text-slate-900 leading-[1.1] mb-6 tracking-tight">
        Expert care. <br />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-blue-500">
          Fast, smooth, & seamless.
        </span>
      </h1>

      {/* Subheadline */}
      <p class="text-lg md:text-xl text-slate-500 mb-8 leading-relaxed max-w-lg mx-auto lg:mx-0">
        We replace the confusion and hassle of medical travel with clarity. From doctor bookings and airport transfers to guarantee letter (GL) assistance, we support you every step of the way.
      </p>

      {/* Buttons */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-10">
        <a href="/doctors" class="bg-indigo-600 text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-indigo-700 transition shadow-xl shadow-indigo-200/50 flex items-center justify-center gap-2 hover:-translate-y-1 duration-300">
          Find a Specialist <ArrowRight class="w-5 h-5" />
        </a>
        <a href="https://wa.me/60166062534" class="bg-white border border-slate-200 text-slate-700 px-8 py-4 rounded-full font-bold text-lg hover:bg-slate-50 transition flex items-center justify-center gap-2 hover:border-indigo-200">
          <MessageCircle class="w-5 h-5" />
          Talk to Concierge
        </a>
      </div>

      {/* Trust Indicator */}
      <div class="flex items-center justify-center lg:justify-start gap-4 text-sm text-slate-400 font-medium">
        <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-200"></div>
            <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-300"></div>
            <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-400"></div>
        </div>
        <p>Trusted by patients in SouthEast Asia.</p>
      </div>
    </div>

    {/* RIGHT: Visualization */}
    <div class="relative mt-8 lg:mt-0 perspective-1000">
      
      {/* Floating Card */}
      <div class="relative bg-white/60 backdrop-blur-xl border border-white/80 rounded-3xl p-6 shadow-[0_30px_60px_-15px_rgba(0,0,0,0.1)] transform rotate-y-6 hover:rotate-0 transition-all duration-700 ease-out group">
        
        {/* Card Header */}
        <div class="flex items-center justify-between mb-8 border-b border-slate-100 pb-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-blue-600 flex items-center justify-center text-white shadow-lg shadow-indigo-200">
                    <ShieldCheck class="w-5 h-5" />
                </div>
                <div>
                    <div class="text-sm font-bold text-slate-800">Trip Itinerary</div>
                    <div class="text-xs text-slate-400">ID: #OCHA-8821</div>
                </div>
            </div>
            <div class="px-3 py-1 bg-green-100 text-green-700 text-xs font-bold rounded-full flex items-center gap-1">
                <div class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></div>
                CONFIRMED
            </div>
        </div>

        {/* Timeline Items */}
        <div class="space-y-4">
            
            {/* Item 1 */}
            <div class="flex items-center gap-4 p-3 rounded-2xl bg-white border border-slate-100 shadow-sm transition-transform group-hover:translate-x-1 duration-300">
                <div class="w-10 h-10 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center">
                    <CheckCircle2 class="w-5 h-5" />
                </div>
                <div class="flex-1">
                    <div class="text-sm font-bold text-slate-800">Specialist Matched</div>
                    <div class="text-xs text-slate-500">Dr. Patrick Tiau â€¢ Sunway Medical</div>
                </div>
            </div>

            {/* Item 2 */}
            <div class="flex items-center gap-4 p-3 rounded-2xl bg-white border border-slate-100 shadow-sm transition-transform group-hover:translate-x-1 duration-300 delay-75">
                <div class="w-10 h-10 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center">
                    <FileCheck class="w-5 h-5" />
                </div>
                <div class="flex-1">
                    <div class="text-sm font-bold text-slate-800">Guarantee Letter (GL)</div>
                    <div class="text-xs text-slate-500">Approved by insurance provider</div>
                </div>
            </div>

            {/* Item 3 */}
            <div class="flex items-center gap-4 p-3 rounded-2xl bg-white border border-slate-100 shadow-sm transition-transform group-hover:translate-x-1 duration-300 delay-150">
                <div class="w-10 h-10 rounded-xl bg-amber-50 text-amber-600 flex items-center justify-center">
                    <Car class="w-5 h-5" />
                </div>
                <div class="flex-1">
                    <div class="text-sm font-bold text-slate-800">Premium Transfer</div>
                    <div class="text-xs text-slate-500">Pick-up scheduled for 09:30 AM</div>
                </div>
            </div>

        </div>

        {/* Decorative Blur */}
        <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-tr from-indigo-200/40 to-blue-200/40 blur-3xl rounded-full"></div>
      </div>

    </div>

  </div>
</section>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  .rotate-y-6 {
    transform: rotateY(-6deg) rotateX(2deg);
  }
  .group:hover {
    transform: rotateY(0) rotateX(0);
  }
</style>