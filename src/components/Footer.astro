---
// src/components/Footer.astro
import { ShieldCheck } from 'lucide-react';
---

<footer class="bg-white border-t border-slate-100 pt-12 pb-32 md:py-12 mt-auto">
    <div class="max-w-7xl mx-auto px-6 flex flex-col items-center text-center">
        
        {/* Security Badge */}
        <div class="flex items-center justify-center gap-2 mb-6 text-emerald-600 font-medium bg-emerald-50 px-4 py-2 rounded-full text-sm">
             <ShieldCheck className="w-4 h-4" />
             <span>Your data is secure. We never spam.</span>
        </div>

        {/* Copyright */}
        <p class="text-slate-400 text-sm mb-6">
            © {new Date().getFullYear()} Ocha Healthcare. Not a medical provider.
        </p>

        {/* Legal Links */}
        <div class="flex flex-wrap justify-center items-center gap-4 text-sm font-bold text-slate-600">
            <a href="/privacy" class="hover:text-[#276CA1] transition-colors underline decoration-slate-300 underline-offset-4">Privacy Policy</a>
            <span class="text-slate-300 hidden md:inline">•</span>
            <a href="/terms" class="hover:text-[#276CA1] transition-colors underline decoration-slate-300 underline-offset-4">Terms of Use</a>
        </div>

    </div>
</footer>