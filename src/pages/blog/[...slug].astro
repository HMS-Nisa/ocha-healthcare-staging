---
// src/pages/blog/[...slug].astro
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { 
  Calendar, Clock, ChevronLeft, 
  MessageCircle, User, Search, ArrowRight 
} from 'lucide-react';
import { WA_NUMBER } from '../../config';

// 1. GENERATE PATHS
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. GET DATA
const { entry } = Astro.props;
const { Content } = await entry.render();
const waLink = `https://wa.me/${WA_NUMBER}?text=Hi Ocha, I read the article "${entry.data.title}" and want to know more.`;

const formattedDate = entry.data.date.toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---

<Layout title={entry.data.title} description={entry.data.subtitle}>
  
  {/* Progress Bar */}
  <div id="progress-container" class="fixed top-0 left-0 w-full h-1 bg-slate-200 z-50">
    <div id="progress-bar" class="h-full bg-[#276CA1] w-0 transition-all duration-150"></div>
  </div>

  {/* ðŸš€ PADDING UPDATE: Reduced to pt-20 lg:pt-24 to match other pages */}
  <div class="bg-white min-h-screen pb-32 pt-20 lg:pt-24">
    
    {/* BREADCRUMB */}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 mb-8">
      <a href="/blog" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors">
        <ChevronLeft className="w-4 h-4 mr-1" />
        Back to Guides
      </a>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 grid lg:grid-cols-12 gap-12">
      
      {/* MAIN ARTICLE (8 Cols) */}
      <div class="lg:col-span-8">
        
        <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-[#276CA1] text-xs font-bold uppercase tracking-wider mb-6">
          {entry.data.category}
        </span>

        <h1 class="font-serif text-3xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
          {entry.data.title}
        </h1>
        <p class="text-xl text-slate-500 leading-relaxed mb-8">
          {entry.data.subtitle}
        </p>

        {/* Metadata */}
        <div class="flex flex-wrap items-center gap-6 text-sm text-slate-500 border-b border-slate-100 pb-8 mb-10">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600">
                    <User className="w-5 h-5" />
                </div>
                <div>
                    <p class="text-slate-900 font-bold">Ocha Team</p>
                    <p class="text-xs">Medical Concierge</p>
                </div>
            </div>
            <div class="hidden sm:block w-px h-8 bg-slate-200"></div>
            <div class="w-full sm:w-auto mt-4 sm:mt-0 flex items-center gap-4 text-xs text-slate-400 font-medium uppercase tracking-wide">
                <span class="flex items-center gap-1"><Calendar className="w-3.5 h-3.5" /> {formattedDate}</span>
                <span class="flex items-center gap-1"><Clock className="w-3.5 h-3.5" /> {entry.data.readTime}</span>
            </div>
        </div>

        {/* Featured Image */}
        <div class="relative rounded-3xl overflow-hidden shadow-lg shadow-slate-200/50 mb-12">
            <img src={entry.data.image} alt={entry.data.title} class="w-full h-[400px] object-cover" />
        </div>

        {/* CONTENT RENDERER */}
        <article class="ocha-article prose prose-lg prose-slate max-w-none">
            <Content />
        </article>

        {/* Directory CTA */}
        <div class="border-t border-slate-100 mt-16 pt-10">
            <div class="bg-indigo-50 rounded-2xl p-8 flex flex-col sm:flex-row items-center justify-between gap-6 text-center sm:text-left border border-indigo-100">
                <div>
                    <h3 class="font-serif text-xl font-bold text-slate-900 mb-2">Ready to find a specialist?</h3>
                    <p class="text-slate-600">Browse our verified directory of experienced doctors in Malaysia.</p>
                </div>
                <a href="/doctors" class="shrink-0 bg-indigo-600 text-white px-8 py-4 rounded-full font-bold text-sm hover:bg-indigo-700 transition shadow-lg shadow-indigo-200 flex items-center gap-2 group hover:-translate-y-0.5">
                    <Search className="w-4 h-4" />
                    Find a Doctor
                    <ArrowRight className="w-4 h-4 opacity-50 group-hover:translate-x-1 transition-transform" />
                </a>
            </div>
        </div>

      </div>

      {/* SIDEBAR */}
      <div class="lg:col-span-4 space-y-8">
        <div class="sticky top-32">
            <div class="bg-white rounded-2xl shadow-xl shadow-blue-900/5 border border-slate-100 p-6 overflow-hidden relative group">
                <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-bl-[100px] -z-10 transition group-hover:scale-110"></div>
                <div class="mb-6">
                    <span class="inline-block py-1 px-3 rounded-full bg-emerald-100 text-emerald-800 text-[10px] font-bold uppercase tracking-wider mb-4">Free Concierge</span>
                    <h3 class="font-serif text-xl font-bold text-slate-900 mb-2">Need advice on this topic?</h3>
                    <p class="text-sm text-slate-500 leading-relaxed">Our team can help you get cost estimates and doctor recommendations in 24 hours.</p>
                </div>
                <a href={waLink} target="_blank" class="block w-full py-4 bg-[#276CA1] hover:bg-[#1f5682] text-white text-center font-bold rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all flex items-center justify-center gap-2">
                    <MessageCircle className="w-4 h-4" />
                    Chat with Concierge
                </a>
            </div>
        </div>
      </div>

    </div>
  </div>

  <script>
    window.addEventListener('scroll', () => {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      const progressBar = document.getElementById("progress-bar");
      if(progressBar) progressBar.style.width = scrolled + "%";
    });
  </script>
</Layout>

<style is:global>
  /* FORCE STYLING FOR MARKDOWN CONTENT */
  
  .ocha-article h2 {
    font-family: 'Lora', serif;
    font-size: 1.875rem;
    font-weight: 700;
    color: #0f172a;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .ocha-article h3 {
    font-family: 'Lora', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .ocha-article p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: #475569;
  }

  .ocha-article ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .ocha-article ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .ocha-article li {
    margin-bottom: 0.5rem;
    color: #475569;
  }

  .ocha-article strong {
    color: #0f172a;
    font-weight: 700;
  }

  .ocha-article blockquote {
    border-left: 4px solid #276CA1;
    background-color: #eff6ff;
    padding: 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
    font-style: italic;
    color: #1e40af;
    margin: 2rem 0;
  }

  .ocha-article table {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    font-size: 0.875rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .ocha-article th {
    background-color: #f8fafc;
    text-align: left;
    padding: 0.75rem 1rem;
    font-weight: 700;
    color: #334155;
    border-bottom: 2px solid #e2e8f0;
  }

  .ocha-article td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e2e8f0;
    color: #475569;
  }
  
  .ocha-article tr:last-child td {
    border-bottom: none;
  }
</style>